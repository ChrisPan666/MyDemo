<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hzy.mybook">

    <!-- 读写SD卡的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- This is required for Picasso to work. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- The following permissions are OPTIONAL. -->
    <!-- Used to adjust the work load depending on the type of network the device is using. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Used to load images from the gallery content provider. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Used to load images for contact photos. -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 视频播放器权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ibook3"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ibook3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".viewPage.ViewPagerActivity"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ImportBookActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.MyBookActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.ReadBookActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.SettingActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.MyCenterActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.StatementActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.WebViewActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.UserInfoActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".ui.MyCollectionsActivity"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>