<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:id="@+id/line_shelf_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.hzy.mybook.view.BookShelfGridView
        android:id="@+id/bookShelf"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:cacheColorHint="#00000000"
        android:columnWidth="90.0dip"
        android:fadingEdge="none"
        android:horizontalSpacing="5dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </WebView>
    </ScrollView>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myshelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/shelf_bg1"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#ffff"
                android:text="书架"/>
            <TextView
                android:id="@+id/bookshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/shop_bg1"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#ffff"
                android:text="推荐商城"/>
            <TextView
                android:id="@+id/myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_user"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#ffff"
                android:text="我的"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>